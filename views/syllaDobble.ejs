<!DOCTYPE html>
<html lang="en">

<head>
    <title>Log-obble</title>
    <link rel="stylesheet" href="./common/commonStyles.css">
    <link rel="stylesheet" href="./gameHomepage/syllaDobbleStyles.css">

    <script type="module">
        import * as client from './gameHomepage/homepageClient.js';
        window.client = client;

        import * as common from '../common/commonClient.js'
        window.common = common;

        import * as fontClient from './components/fontPicker/fontPickerClient.js'
        window.fontClient = fontClient;
    </script>

    <script type="text/javascript">
        window.onload = function () {
            client.refreshGroupings()
            fontClient.loadFonts();
        };

    </script>
</head>

<body>
    <div class="page">
        <%- include('components/header.ejs'); %>
        <%- include('components/loaders/book-loader.ejs'); %>

        <div class="templatingContainer">
            <button onclick="common.openModal('modal_tutorial_cardCreation')" class="btn-info no-print tutorialBtn"><i
                    class="fa-solid fa-question"></i><span>GUIDA</span></button>

            <div class="templateCardContainer  no-print">

                <!-- DROPDOWN -->
                <div class="dropdown btn-info no-print">
                    <button class="dropdown-button"><i class="fa-solid fa-ellipsis-vertical"></i></button>
                    <div class="dropdown-content">
                        <button onclick="client.stampaPagine()">Stampa</button>
                        <button onclick="client.saveCards()">Salva</button>

                        <input type="file" id="cardsUpload" onchange="client.uploadCards(this)" style="display: none;" />
                        <label for="cardsUpload">Carica</label>

                    </div>
                </div>

                <!-- TITLE -->
                <div class="buttonSect">
                    <div class="subtitle">
                        <span>Impostazioni carta da aggiungere</span>
                    </div>
                    <div class="undertitle">
                        <span>Premi sulle opzioni per cambiare la carta</span>
                    </div>
                </div>


                <div class="flexRow">
                    <!-- TEMPLATE CARD -->
                    <div class="templateCardSect cardsSect">
                        <div class="card templateCard" id="templateCard">
                            <input type="hidden" id="cardId" name="cardId" />
                            <div class="cardRowTop">
                                <input type="text" class="templateCard" id="inTopRowL"
                                    onkeyup="client.syncPreview(inTopRowL)" name="inTopRowL">
                                <input type="color" class="textColorPicker" id="colTopL"
                                    onkeyup="client.syncPreview(colTopL)" name="colTopL">
                                <input type="text" class="templateCard" id="inTopRowM"
                                    onkeyup="client.syncPreview(inTopRowM)" name="inTopRowM">
                                <input type="color" class="textColorPicker" id="colTopM"
                                    onkeyup="client.syncPreview(colTopM)" name="colTopM">
                                <input type="text" class="templateCard" id="inTopRowR"
                                    onkeyup="client.syncPreview(inTopRowR)" name="inTopRowR">
                                <input type="color" class="textColorPicker" id="colTopR"
                                    onkeyup="client.syncPreview(colTopR)" name="colTopR">
                            </div>

                            <div class="cardRowMid">
                                <input type="text" class="templateCard" id="inMidRowL"
                                    onkeyup="client.syncPreview(inMidRowL)" name="inMidRowL">
                                <input type="color" class="textColorPicker" id="colMidL"
                                    onkeyup="client.syncPreview(colMidL)" name="colMidL">
                                <input type="text" class="templateCard" id="inMidRowM"
                                    onkeyup="client.syncPreview(inMidRowM)" name="inMidRowM">
                                <input type="color" class="textColorPicker" id="colMidM"
                                    onkeyup="client.syncPreview(colMidM)" name="colMidM">
                                <input type="text" class="templateCard" id="inMidRowR"
                                    onkeyup="client.syncPreview(inMidRowR)" name="inMidRowR">
                                <input type="color" class="textColorPicker" id="colMidR"
                                    onkeyup="client.syncPreview(colMidR)" name="colMidR">
                            </div>

                            <div class="cardRowBottom">
                                <input type="text" class="templateCard" id="inBotRowL"
                                    onkeyup="client.syncPreview(inBotRowL)" name="inBotRowL">
                                <input type="color" class="textColorPicker" id="colBotL"
                                    onkeyup="client.syncPreview(colBotL)" name="colBotL">
                                <input type="text" class="templateCard" id="inBotRowM"
                                    onkeyup="client.syncPreview(inBotRowM)" name="inBotRowM">
                                <input type="color" class="textColorPicker" id="colBotM"
                                    onkeyup="client.syncPreview(colBotM)" name="colBotM">
                                <input type="text" class="templateCard" id="inBotRowR"
                                    onkeyup="client.syncPreview(inBotRowR)" name="inBotRowR">
                                <input type="color" class="textColorPicker" id="colBotR"
                                    onkeyup="client.syncPreview(colBotR)" name="colBotR">
                            </div>
                        </div>
                    </div>

                    <!-- BUTTONS -->
                    <div class="actionButtonsContainer">
                        <div class="actionButtons">
                            <div class="tooltip-wrapper">
                                <div class="tooltip tooltip-top tooltip-info">Reimposta valori predefiniti dei campi
                                </div>
                                <button type="button" class="btn btn-secondary" onclick="client.resetGlobals()">Reset pers.</button>
                            </div>
                            <button class="btn btn-primary" onclick="client.loadCard([], true); client.validateInputs()">Aggiungi</button>
                            <button class="btn btn-primary" style="display: none" onclick="client.logCards()">LOG
                                CARDS</button>
                        </div>
                    </div>

                    <!-- PREVIEW CARD -->
                    <div class="templateCardSect cardsSect">
                        <div class="card templateCard" id="previewCard">
                            <div class="cardRowTop">
                                <div class="templateCard" id="prevTopL" name="inTopRowL"></div>
                                <div class="templateCard" id="prevTopM" name="inTopRowM"></div>
                                <div class="templateCard" id="prevTopR" name="inTopRowR"></div>
                            </div>

                            <div class="cardRowMid">
                                <div class="templateCard" id="prevMidL" name="inMidRowL"></div>
                                <div class="templateCard" id="prevMidM" name="inMidRowM"></div>
                                <div class="templateCard" id="prevMidR" name="inMidRowR"></div>
                            </div>

                            <div class="cardRowBottom">
                                <div class="templateCard" id="prevBotL" name="inBotRowL"></div>
                                <div class="templateCard" id="prevBotM" name="inBotRowM"></div>
                                <div class="templateCard" id="prevBotR" name="inBotRowR"></div>
                            </div>
                        </div>
                    </div>

                </div>

                <!-- ACCORDIONS -->
                <div class="autoGenContainter no-print">
                    <button onclick="openAccordion(this)" class="accordion homePage-accordion">Genera carte</button>
                    <div class="panel">
                        <div class="autoGenSect">
                            <div>
                                <label for="groupingSelected" class="smallText">Seleziona un raggruppamento:</label>
                                <div class="select-container">
                                    <select class="custom-select" id="groupingSelected" onchange="client.getServerGroups(this.value);client.unlockButton(groupSelected.value);">
                                        <option value="x" selected disabled>Seleziona un raggruppamento</option>
                                    </select>
                                </div>
                            </div>
                            <div>
                                <label for="groupSelected" class="smallText">Seleziona un gruppo:</label>
                                <div class="select-container">
                                    <select class="custom-select" id="groupSelected" onchange="client.unlockButton(this.value);">
                                        <option value="x" selected disabled>Seleziona un gruppo</option>
                                    </select>
                                </div>
                            </div>
                            <div class="sliderContainer">
                                <%- include('components/slider/slider.ejs', { "id": 'cardsNumber', "label": "Sillabe per carta", "min": 1, "max": 9, "value": 9, "oninput": "client.changeCellsNumber(this.value)" }); %>
                            </div>

                        </div>
                        <div class="autoGenSect">
                            <div class="warning">
                                <span><i class="fa-solid fa-triangle-exclamation"></i> <b>ATTENZIONE!</b> <i class="fa-solid fa-triangle-exclamation"></i><br>La generazione delle carte potrebbe dare risultati non precisi, ricontrollare i risultati</span>
                            </div>
                            <div>
                                <button id="generateCardsBtn" class="btn btn-primary" disabled onclick="client.generateCards(groupingSelected.value, groupSelected.value, cardsNumber.value);">Crea carte</button>
                            </div>
                        </div>
                    </div>
                    <button onclick="openAccordion(this)" class="accordion homePage-accordion">Personalizza carta</button>
                    <div class="panel">
                        <div class="customizeCardsSect">
                            <!-- CARD CUSTOMIZATION -->
                            <div class="settingsContainer">
                                <!-- COLORS -->
                                <div class="settingSect">
                                    <div class="colSect">
                                        <div class="colorTitle">
                                            <label for="cardBg">Sfondo</label>
                                            <input type="color" class="color-input" id="cardBg" name="cardBg" value="#FFFFFF" onchange="client.updatePrevCard(this)" />
                                        </div>
                                        <%- include('components/colorPicker/colorPicker.ejs', { id: 'cardBg'}); %>
                                    </div>
                                    <div class="colSect">
                                        <div class="colorTitle">
                                            <label for="cardBorder">Bordo</label>
                                            <input type="color" class="color-input" id="cardBorder" name="cardBorder" value="#000000" onchange="client.updatePrevCard(this)" />
                                        </div>
                                        <%- include('components/colorPicker/colorPicker.ejs', { id: 'cardBorder'}); %>
                                    </div>
                                    <div class="colSect">
                                        <div class="colorTitle">
                                            <label for="cardGlobalTextCol">Testo</label>
                                            <input type="color" class="color-input" id="cardGlobalTextCol" name="cardGlobalTextCol" value="#000000" onchange="client.updatePrevCard(this)" />
                                        </div>
                                        <%- include('components/colorPicker/colorPicker.ejs', { id: 'cardGlobalTextCol'}); %>
                                    </div>
                                </div>
                                <div class="settingSect">
                                    <div class="colSect">
                                        <%- include('components/textFormatting/textFormatting.ejs', { elementToSync: 'previewCard'}); %>
                                    </div>
                                    <div class="colSect">
                                        <div class="bold ">
                                            <label for="fontSelector">FONT</label>
                                            <%- include('components/fontPicker/fontPicker.ejs'); %>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="cardsContainer">
                <div class="loadedCardsSect no-print">
                    <div class="title">
                        <h3>LE TUE CARTE</h3>
                    </div>
                </div>

                <div class="cardsSect" id="cardsSectId">
                    <div class="cardsSectPad">
                        &nbsp;
                    </div>
                </div>
            </div>
        </div>

        <%- include('components/modals.ejs'); %>
        <%- include('components/dialog.ejs'); %>
    </div>
</body>

</html>